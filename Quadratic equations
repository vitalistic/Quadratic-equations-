<script type="text/javascript">
function ans(){
var a=document.getElementById('aaa').value;
var b=document.getElementById('bbb').value;
var c=document.getElementById('ccc').value;
var f=eval(-b);
var g=Math.pow(b,2);
var h=eval(4)*eval(a)*eval(c);
var i=g-h;
var j=Math.sqrt(i);
var k=f+j;
var l=eval(2)*eval(a);
var m=k/l;
var n=f-j;
var o=n/l;
var d=document.getElementById('x11').value=m;
var e=document.getElementById('x22').value=o;
}

</script>
